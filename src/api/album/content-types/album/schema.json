{
  "kind": "collectionType",
  "collectionName": "albums",
  "info": {
    "singularName": "album",
    "pluralName": "albums",
    "displayName": "Album",
    "description": "Photo albums for teams"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "team": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::team.team",
      "inversedBy": "albums"
    },
    "eventDate": {
      "type": "date",
      "required": false
    },
    "location": {
      "type": "string",
      "required": false
    },
    "defaultPhotographerCredit": {
      "type": "string",
      "required": false
    },
    "photos": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "photoCredits": {
      "type": "component",
      "repeatable": true,
      "component": "metadata.photo-credit"
    }
  }
}
